<div class="section-id-{{ section.id }}">
  <div class="container">
    {% for block in section.blocks %}
      {{ block.settings.image }}
      <div class="gallery__image rimage-outer-wrapper rimage-background lazyload fade-in"
           data-bgset="{{ block.settings.image | img_url: '1024x1024' }}"
           data-sizes="auto"
           data-parent-fit="cover"
           style="background-position: {{ block.settings.alignment }}; --ar-padding: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;">
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Carousel",
  "class": "section-hero-carousel",
  "settings": [],
  "blocks": [
    {
      "type": "image_on_left",
      "name": "Image on left",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    },
    {
      "type": "image_on_right",
      "name": "Image on right",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Carousel",
      "settings": {},
      "blocks": []
    }
  ]
}
{% endschema %}
