<div class="section-id-{{ section.id }}">
  <div class="container">
    {% for block in section.blocks %}
      <div class="gallery__image rimage-outer-wrapper rimage-background lazyload fade-in"
           data-bgset="{{ block.settings.image | img_url: '1024x1024' }}"
           data-sizes="auto"
           data-parent-fit="cover"
           style="background-position: {{ block.settings.alignment }}; --ar-padding: {{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100 }}%;">
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Carousel",
  "class": "section-hero-carousel",
  "settings": [

  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Gallery"
        },
        {
          "type": "textarea",
          "id": "title",
          "label": "Heading",
          "default": "Tell your story"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }

  ],
  "presets": [
    {
      "name": "Hero Carousel",
      "settings": {
      },
      "blocks": [
      ]
    }
  ]
}
{% endschema %}
