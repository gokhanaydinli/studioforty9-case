{% style %}
    .image-right {
    order: 2;
    width: 60%;
    }
    .image-left {
    order: 1;
    width: 40%;
    }
    .hero-carousel-container {
    display: flex;
    flex-direction: row;
    gap: 24px;
    }
    .gallery__image {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    }
    .gallery__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    }
{% endstyle %}

<div class="section-id-{{ section.id }}">
    <div class="container hero-carousel-container">
        {% for block in section.blocks %}
            {% liquid

                assign link = block.settings.link
                assign button_label = block.settings.button_label
                assign subheading = block.settings.subheading
                assign heading = block.settings.heading
                assign description = block.settings.description
                assign image = block.settings.image

            %}
            <div class="gallery__image {% if block.type == 'image_on_left' %}image-left{% elsif block.type == 'image_on_right' %}image-right{% endif %}">
                {% if image %}
                    <img src="{{ image | img_url: '1024x1024' }}" alt="Hero Image" />
                {% endif %}
                <div class="hero-carousel-content">
                    <span>{{ subheading }}</span>
                    <h2>{{ heading }}</h2>
                    <p>{{ description }}</p>
                    <a href="{{ link }}" class="hero-btn">{{ button_label }}</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

