<style>
    .free-delivery-container {
        margin: 24px 24px;
        gap: 24px;
        justify-content: space-around;
    }
</style>
<div class="section-id-{{ section.id }}">
    <div class="free-delivery-container F-Row D-Flex A-Center BGColorBlue">
        {% for block in section.blocks %}
            <div class="free-delivery-item D-Flex F-Row">
                {% if block.settings.select_icon != blank %}
                    <img src="{{ block.settings.select_icon }}" class="lazyload">
                {% endif %}
                <h3 class="ColorWhite">{{ block.settings.text }}</h3>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
  "name": "Free Delivery Banner",
  "class": "section-delivery-banner",
  "settings": [],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "select",
          "id": "select_icon",
          "label": "Use icon",
          "options": [
            {
              "value": "return icon",
              "label": "Return Icon"
            },
            {
              "value": "free delivery",
              "label": "Free Delivery"
            },
            {
              "value": "location",
              "label": "Location"
            }
          ]
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Free Delivery Banner",
      "settings": {},
      "blocks": [

      ]
    }
  ]
}
{% endschema %}
