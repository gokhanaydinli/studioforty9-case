<style>
    .free-delivery-container {
        margin: 24px 24px;
        gap: 24px;
        justify-content: space-around;
        padding:24px 0;
    }
</style>
<div class="section-id-{{ section.id }}">
    <div class="free-delivery-container F-Row D-Flex A-Center BGColorBlue">
        {% for block in section.blocks %}
            <div class="free-delivery-item D-Flex F-Row A-Center Gap8">
                {% if block.settings.icon_cdn != blank %}
                    <img src="{{ block.settings.icon_cdn }}">
                {% endif %}
                <h3 class="ColorWhite MarginNone">{{ block.settings.text }}</h3>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
  "name": "Free Delivery Banner",
  "class": "section-delivery-banner",
  "settings": [],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "url",
          "id": "icon_cdn",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Free Delivery Banner",
      "settings": {},
      "blocks": [

      ]
    }
  ]
}
{% endschema %}
